<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Persona" table="persona">
    <id name="idpersona" type="integer" column="idPersona">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="apellidopaterno" type="string" column="apellidoPaterno" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="apellidomaterno" type="string" column="apellidoMaterno" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fechanacimiento" type="date" column="fechaNacimiento" nullable="true"/>
    <field name="direccion" type="string" column="direccion" length="150" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="40" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
